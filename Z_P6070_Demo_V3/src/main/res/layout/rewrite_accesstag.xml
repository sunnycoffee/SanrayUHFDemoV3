<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:keepScreenOn="true"
	android:focusable="true"
	android:focusableInTouchMode="true"
	android:background="#225679"
	>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.71"
    android:orientation="horizontal" 
    android:gravity="center_vertical"
    >

    	<TextView
    	    android:id="@+id/textViewPwd"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="密码：         "
        	android:textSize="20dp" 
        	>
    	</TextView>
    	
    	<EditText 
    	    android:id="@+id/et_acc_pwd"
    	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:minWidth="200dp"
        	android:hint="输入8位密码"
        	android:numeric="integer"
        	android:singleLine="true"
        	android:text="00000000"
        	android:maxLength="8"
    	    />
    	
</LinearLayout>

<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="#236636"
        android:layout_weight="1"
        >
    	
    	<LinearLayout 
    	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" 
    	    >
    	    
    	    <TextView
    	    android:id="@+id/countTXT"
        	android:layout_width="wrap_content"
        	android:layout_height="50dp"
        	android:text="过滤"
        	android:textSize="20sp"
        	 >
    		</TextView>
    		
    	     <Spinner
    	         android:id="@+id/sp_acc_filter"
    	         android:layout_width="100dp"
    	         android:layout_height="match_parent"
    	         android:textSize="20dp" >

    		</Spinner>
    	</LinearLayout>
    	
    	<LinearLayout 
    	    android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:orientation="vertical" 
    	    >
    	     
    	    <TextView
    	    android:id="@+id/tv_acc_fileter_count"
        	android:layout_width="wrap_content"
        	android:layout_height="25dp"
        	android:text="长度=0"
        	android:textSize="20sp"       	
        	 >
    		</TextView>

    	<EditText
    	    android:id="@+id/et_acc_filter"
    	    android:layout_width="match_parent"
    	    android:layout_height="60dp"  	
    	    android:enabled="true"  	   
    	    android:hint="输入过滤的数据，使用间隔隔开,Min Unit：Word"
    	    android:minWidth="200dp" />

    	</LinearLayout>
    	
</LinearLayout>


<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_weight="2"
        android:background="#324436"
        android:gravity="center_vertical"
        >
    	
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_weight="2"
        android:gravity="center_vertical"
        >
    	
    	<LinearLayout 
    	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" 
    	    >
    	    
    	    <TextView
    	    android:id="@+id/bank_countTXT"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="标签区域"
        	android:textSize="20dp" >
    		</TextView>
    		
    	     <Spinner
    	    android:id="@+id/sp_acc_bank"
        	android:layout_width="100dp"
        	android:layout_height="wrap_content"
        	android:textSize="20dp" >
    		</Spinner> 
    	</LinearLayout>
    	
    	
    	<LinearLayout 
    	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" 
    	    >
    	    
    	    <TextView
    	    android:id="@+id/addrstart_countTXT"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="起始地址"
        	android:textSize="20dp" >
    		</TextView>
    		
    	     <Spinner
    	    android:id="@+id/sp_acc_offset"
        	android:layout_width="100dp"
        	android:layout_height="wrap_content"
        	android:textSize="20dp" >
    		</Spinner>  
    	</LinearLayout>
</LinearLayout>    	
    	

<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_weight="2"
        android:gravity="center_vertical"
        >
    	
    	<LinearLayout 
    	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" 
    	    >
    	    
    	    <TextView
    	    android:id="@+id/Length_countTXT"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="长度"
        	android:textSize="20dp" >
    		</TextView>
    		
    	     <Spinner
    	    android:id="@+id/sp_acc_length"
        	android:layout_width="100dp"
        	android:layout_height="wrap_content"
        	android:textSize="20dp" >
    		</Spinner>
    	</LinearLayout>
    	
    	<LinearLayout 
    	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" 
    	    >
    	    
    	    <TextView
    	    android:id="@+id/operate_countTXT"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="operate"
        	android:textSize="20dp" >
    		</TextView>
    		
    	     <Spinner
    	    android:id="@+id/sp_acc_oper"
        	android:layout_width="100dp"
        	android:layout_height="wrap_content"
        	android:textSize="20dp" 
        	android:visibility="gone"
        	>
    		</Spinner>
    	</LinearLayout>
    	
    </LinearLayout>
    	
</LinearLayout>

<LinearLayout 
    	    android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" 
        	android:layout_weight="2"
    	    >
    	  <TextView
    	    android:id="@+id/tv_acc_data_count"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="长度=0"
        	android:textSize="20sp"
        	android:layout_weight="1"
        	 >
    		</TextView>
    	     <EditText
    	         android:id="@+id/et_acc_write_read"
    	         android:layout_width="match_parent"
    	         android:layout_height="match_parent"
    	         android:layout_weight="5"
    	         android:minWidth="300dp"
    	         android:textSize="20dp" 
    	         
    	         android:hint="输入过滤的数据，使用间隔隔开,Min Unit：Word"
    	         >

    		</EditText>
    	</LinearLayout>


<LinearLayout 
    	    android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal" 
        	android:layout_weight="1"
        	android:background="#152436"
        	android:gravity="center"
    	    >
    	    
    	    <Button
    	    android:id="@+id/bt_acc_read"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="读取"
        	android:textSize="20dp"
        	android:layout_marginLeft="20dp"
        	 >
    		</Button>
    		
    	     <Button
    	    android:id="@+id/bt_acc_write"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="20dp" 
        	android:text="写入"
        	android:layout_marginLeft="30dp"
        	>
    		</Button>
    	</LinearLayout>


</LinearLayout>


