<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:keepScreenOn="true">
    
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_weight="0.78">
    	<TextView
    	    android:id="@+id/countTXT"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="标签个数:0"
        	android:textSize="20dp" >
    	</TextView>
        <ListView
            android:id="@+id/lvReception"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:keepScreenOn="true"
    android:orientation="horizontal" >
        
    <CheckBox
	    android:id="@+id/checkBox1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/TextSize"
	    android:layout_weight="2"
	    android:text="读温度" />
        
	<Button  android:textSize="@dimen/TextSize" android:layout_width="70dp" android:text="开始循环" 
	         android:layout_height="@dimen/ButtonHeight" android:id="@+id/CycleBtn" android:onClick="Test"  android:layout_weight="2"
	    > </Button>

	<Button
	    android:id="@+id/CleanBtn"
	    android:layout_width="50dp"
	    android:layout_height="@dimen/ButtonHeight"
	    android:textSize="@dimen/TextSize"
	    android:layout_weight="2"
	    android:text="清 除" />
		
	<Button
	    android:id="@+id/SoundBtn"
	    android:layout_width="65dp"
	    android:layout_height="@dimen/ButtonHeight"
	    android:textSize="@dimen/TextSize"
	    android:layout_weight="2"
	    android:text="声音" />
	
	<Button
	    android:id="@+id/SetBtn"
	    android:layout_width="70dp"
	    android:layout_height="@dimen/ButtonHeight"
	    android:textSize="@dimen/TextSize"
	    android:layout_weight="2"
	    android:text="参数设置" />

</LinearLayout>	    
	
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:keepScreenOn="true"
    android:orientation="horizontal" >	
    
        <CheckBox
	    android:id="@+id/checkBox2"
	    android:layout_width="wrap_content"
	    android:textSize="@dimen/TextSize"
	    android:layout_height="wrap_content"
	    android:layout_weight="2"
	    android:text="ASCII" />
	
	 <TextView
        android:id="@+id/textView1"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="功率"
        android:layout_weight="1"
        android:textSize="@dimen/TextSize" />
    
     <Spinner
    	    android:id="@+id/cB_Power"
        	android:layout_width="75dp"
        	android:layout_weight="2"
        	android:layout_height="wrap_content"
        	android:textSize="@dimen/TextSize" >
    </Spinner>
    		
    	<Button
   	    android:id="@+id/Bn_SetPower"
       	android:layout_width="65dp"
       	android:layout_height="@dimen/ButtonHeight"
        android:layout_weight="2"
       	android:text="设置功率"
       	android:textSize="@dimen/TextSize" >
   		</Button>
            
      <!--    <Button
   	    android:id="@+id/bt_temp_get"
       	android:layout_width="80dp"
       	android:layout_height="wrap_content"
       	android:textSize="12dp"
       	android:text="查看温度"
       	>
   		</Button>   -->
	
        <Button
	    android:id="@+id/SaveBtn"
	    android:layout_width="70dp"
	    android:layout_height="@dimen/ButtonHeight"
	    android:textSize="@dimen/TextSize"
	    android:layout_weight="2"
	    android:text="save" />
        
	
</LinearLayout>

</LinearLayout>


